<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Library Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Library Book Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <field name="currency_id" invisible="True"/>
                <header>
                    <button name="make_available" string="Make Available" type="object" invisible="state == 'available'"/>
                    <button name="make_borrowed" string="Make Borrowed" type="object" invisible="state == 'borrowed'"/>
                    <button name="make_lost" string="Make Lost" type="object" invisible="state == 'lost'"/>
                    <field name="state" widget="statusbar"/>
                    <button name="get_all_library_members" string="Log members" type="object"/>
                </header>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="short_name"/>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="pages"/>
                        <field name="note"/>
                        <field name="publisher_id"/>
                        <field name="publisher_city"/>
                        <field name="ref_doc_id"/>
                    </group>
                    <group>
                        <field name="cover" widget="image" class="oe_avatar"/>
                        <field name="date_release"/>
                        <field name="age_days"/>
                        <field name="date_updated"/>
                        <field name="reader_rating"/>
                        <field name="cost_price"/>
                        <field name="retail_price"/>
                    </group>
                </group>
                <group>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">Library Book Tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="currency_id" column_invisible="True"/>
                <field name="name"/>
                <field name="short_name"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="date_release"/>
                <field name="state"/>
                <field name="retail_price" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>

    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">Library Book Search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <field name="age_days"/>
                <filter string="No Authors" name="without_author" domain="[('author_ids','=',False)]" />
            </search>
        </field>
    </record>
    
    <menuitem name="My Library" id="library_base_menu" web_icon="fa-book"/>
    <menuitem name="Books" id="library_book_menu" parent="library_base_menu" action="library_book_action"/>
    
</odoo>